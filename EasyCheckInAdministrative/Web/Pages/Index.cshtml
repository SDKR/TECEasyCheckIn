@page
@model Web.Pages.IndexModel
@using Web.Pages.Shared.Components
@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/modal.css" />
    <link rel="stylesheet" href="~/css/backToTop.css" />
}

@*@(await Html.RenderComponentAsync<LoginRC>(RenderMode.ServerPrerendered))*@

<script src="_content/BlazorInputFile/inputfile.js"></script>
<script src="_framework/blazor.server.js"></script>

@section Scripts {
    <script src="~/js/modal.js" asp-append-version="true"></script>
    <script src="~/js/backToTop.js" asp-append-version="true"></script>
}

<form method="post" class="form-signin">
    <h1 class="display-3 mb-3">TEC</h1>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <label for="inputEmail" class="">Initialer</label>
    <input asp-for="Input.Initials" class="form-control" type="text" id="inputInitials" placeholder="Indtast instruktør initialer" required autofocus>

    <label for="inputPassword" class="">Kodeord</label>
    <input asp-for="Input.Password" class="form-control" type="password" id="inputPassword" placeholder="Kodeord" required>

    <button type="submit" class="btn btn-lg btn-primary btn-block">
        Log Ind
    </button>
    <p style="color:red" id="ErrorCode" value="@Model.ShowError">@Model.ShowError</p>
    <p class="mt-5 mb-3 text-muted">&copy; TEC 2020</p>
</form>

<style>
    html,
    body {
        height: 100%;
    }

    body {
        /*        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;*/
    }

    .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: auto;
    }

        .form-signin .checkbox {
            font-weight: 400;
        }

        .form-signin .form-control {
            position: relative;
            box-sizing: border-box;
            height: auto;
            padding: 10px;
            font-size: 16px;
        }

            .form-signin .form-control:focus {
                z-index: 2;
            }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }
</style>